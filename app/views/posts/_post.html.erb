<div id="<%= dom_id post %>">
  <div class="card mb-3 mx-3" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <h6 class="card-subtitle mb-2 text-body-secondary"><%= post.user_id %></h6>
    <p class="card-text"><%= post.body %></p>
    <%= link_to "Show this post", post %>
    
  </div>
</div>

</div>

